<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F2"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6798e7">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_back_white"
            android:drawablePadding="8dp"
            android:padding="8dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/card_add"
            android:padding="10dp"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="17sp"/>



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="14dp"
        android:background="@color/huise"></View>

    <LinearLayout
        android:background="@color/white"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:padding="5dp"
            android:text="姓  名 ："
            android:textSize="16sp"
            android:textColor="@color/textblack"/>
        <EditText
            android:textSize="14sp"
            android:id="@+id/ced_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:hint="请输入姓名"
            android:inputType="number"
            android:padding="5dp"
            android:textColorHint="@color/font_black_4"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:background="@color/huise"></View>
    <LinearLayout
    android:background="@color/white"
    android:layout_marginLeft="8dip"
    android:layout_marginRight="8dip"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dip"
        android:layout_marginRight="10dip"
        android:padding="5dp"
        android:text="手机号："
        android:textSize="16sp"
        android:textColor="@color/textblack"/>
    <EditText
        android:textSize="14sp"
        android:id="@+id/ced_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dip"
        android:background="@null"
        android:hint="请输入手机号"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="@color/font_black_4"
        />

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/huise"></View>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="10dip"
            android:padding="5dp"
            android:text="银行卡号："
            android:textSize="16sp"
            android:textColor="@color/textblack"/>
        <EditText
            android:id="@+id/ced_cardnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textSize="14sp"
            android:layout_marginRight="10dip"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:inputType="number"
            android:padding="5dp"
            android:textColorHint="@color/font_black_4"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@color/huise"></View>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dip"
            android:padding="5dp"
            android:text="验 证 码 ："
            android:textSize="16sp"
            android:textColor="@color/textblack"/>
        <EditText
            android:id="@+id/edt_code"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:hint="请输入验证码"
            android:inputType="number"
            android:padding="2dp"
            android:textSize="14sp"
            android:textColorHint="@color/font_black_4"
            />
        <TextView
            android:id="@+id/tv_getcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:padding="4dp"
            android:text="获取验证码"
            android:textColor="@color/redd"
            android:textSize="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/huise"
        android:orientation="vertical">
        <Button
            android:id="@+id/btn_yes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="50dp"
            android:background="@drawable/shape_radius"
            android:padding="10dp"
            android:text="确认添加"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>
