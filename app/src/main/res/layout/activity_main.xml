<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.example.administrator.lenglian.activity.MainActivity">
    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/huise"
        android:orientation="vertical">
        <RadioGroup
            android:id="@+id/rgp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp">
            <!--注意是drawableTop-->
            <RadioButton
                android:id="@+id/rb_home"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_home_selector"
                android:text="主页"
            />

            <RadioButton
                android:id="@+id/rb_good"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_good_selector"
                android:text="商品"
            />

            <RadioButton
                android:id="@+id/rb_order"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_order_selector"
                android:text="订单"
            />
            <RadioButton
                android:id="@+id/rb_mine"
                style="@style/bottom_tab_style"
                android:drawableTop="@drawable/tab_mine_selector"
                android:text="我的"
            />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>
