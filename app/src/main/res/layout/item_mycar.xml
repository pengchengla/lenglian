<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dp"
              android:id="@+id/ll_root_view"
              android:background="@color/white"
              android:orientation="horizontal">
    <CheckBox
        android:id="@+id/cb_car"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/cb_selector"
        android:button="@null"
        android:gravity="center"/>
    <ImageView
        android:id="@+id/iv_tupian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/binggui"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
    >
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="都是撒大家看撒谎大手机客户端哈撒打算看电话卡四大皆空撒"
            android:textSize="16sp"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
        >
            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="8dp"
                android:text="1777"
                android:textColor="@color/text_red"
                android:textSize="16sp"
                android:visibility="gone"/>
            <com.example.administrator.lenglian.view.SnappingStepper
                android:id="@+id/stepper"
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/text_red"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="删除"
                android:textColor="@color/white"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp"
                android:text="x1"
                android:textColor="@color/yellow"
                android:textSize="16sp"
                android:visibility="gone"
            />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>