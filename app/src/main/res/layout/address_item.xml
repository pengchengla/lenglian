<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/ad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/textblack"
            android:textSize="16sp"/>
        <TextView
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/ad_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18355856696"
            android:textColor="@color/textblack"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

   </RelativeLayout>
         <TextView
             android:padding="5dp"
             android:layout_marginLeft="10dp"
             android:id="@+id/ad_adress"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="北京海淀苏州街"
             android:textColor="@color/textblack"

             android:textSize="16sp"/>
    <View
        android:layout_marginTop="4dp"
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_marginTop="2dp"
           android:id="@+id/change_zhuangtai"
           android:layout_width="150dp"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
               android:layout_marginTop="0.5dp"
                android:id="@+id/ad_imgmo"
               android:layout_marginLeft="10dp"
               android:padding="11dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/icon_single_unchecked"/>
          <TextView
              android:gravity="center"
              android:layout_marginTop="8dp"
              android:layout_toRightOf="@id/ad_imgmo"
              android:id="@+id/ad_text"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="设为默认"
              android:textColor="@color/textblack"
              android:textSize="16sp"/>

       </LinearLayout>
        <TextView
            android:id="@+id/ad_bianji"
            android:textColor="@color/textblack"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/bianji"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"/>
        <TextView
            android:id="@+id/ad_delete"
            android:textColor="@color/textblack"
            android:layout_weight="1"
            android:drawableLeft="@drawable/delete"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
</LinearLayout>
