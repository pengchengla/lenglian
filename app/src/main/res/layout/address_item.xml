<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/ad_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三"
            android:textColor="@color/textblack"
            android:textSize="16sp"/>
        <TextView
            android:padding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/ad_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18355856696"
            android:textColor="@color/textblack"
            android:textSize="16sp"
            android:layout_alignParentRight="true"/>

   </RelativeLayout>
         <TextView
             android:padding="5dp"
             android:layout_marginLeft="10dp"
             android:id="@+id/ad_adress"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="北京海淀苏州街"
             android:textColor="@color/textblack"

             android:textSize="16sp"/>
    <View
        android:layout_marginTop="4dp"
        android:background="#e0e0e0"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <LinearLayout
           android:layout_weight="4"
           android:id="@+id/ad_management"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="horizontal">
           <ImageView
                android:id="@+id/ad_imgmo"
               android:layout_marginTop="10dp"
               android:layout_marginLeft="10dp"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:background="@drawable/foucex"/>
          <TextView
              android:id="@+id/ad_text"
              android:padding="10dp"
             android:gravity="center"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="设为默认"
              android:textColor="@color/textblack"
              android:layout_gravity="center_vertical"
              android:textSize="16sp"/>

       </LinearLayout>
        <TextView
            android:textColor="@color/textblack"
            android:layout_marginLeft="20dp"
            android:layout_weight="2"
            android:drawableLeft="@drawable/bianji"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"/>
        <TextView
            android:textColor="@color/textblack"
            android:layout_weight="1"
            android:drawableLeft="@drawable/delete"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:padding="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="删除"/>
    </LinearLayout>
</LinearLayout>
