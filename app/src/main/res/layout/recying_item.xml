<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:scaleType="fitXY"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/receving_tupian"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:src="@drawable/binggui"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/receving_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:textSize="16sp"
                android:layout_marginLeft="10dip"
                android:textColor="@color/black"
                android:text="阿拉阿发发发 gsgsgsgsgsgsgsgsgsgsgsgs阿达阿达啊大大啊大大啊啊啊阿达"/>
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redd"
                    android:textSize="14dp"
                    android:padding="6dp"
                    android:text="¥"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redd"
                    android:textSize="16dp"
                    android:text="1389.00"
                    android:layout_weight="1"
                    android:id="@+id/receving_price" />


            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="5dp"
        android:background="@color/hui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="确认收货"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:background="@drawable/shape_redline"
            android:id="@+id/recying_btn"
            android:textColor="@color/redd"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
     <View
         android:layout_width="match_parent"
         android:layout_height="8dp"
         android:background="@color/hui"
         android:layout_marginTop="10dp"
         />
</LinearLayout>
