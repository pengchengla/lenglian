<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">
    <RadioGroup
        android:id="@+id/rgp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/huise"
        android:orientation="horizontal"
        android:padding="10dp">
        <RadioButton
            android:id="@+id/rb_tuwen"
            style="@style/xiangqing_tab_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="图文详情"/>

        <RadioButton
            android:id="@+id/rb_rule"
            style="@style/xiangqing_tab_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="规格参数"/>
        <RadioButton
            android:id="@+id/rb_shouhou"
            style="@style/xiangqing_tab_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="包装售后"/>
    </RadioGroup>
    <LinearLayout
        android:id="@+id/ll_canshu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_canshu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_shouhou"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
    >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_shouhou"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
        />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_tuwen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
    >
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"/>
    </LinearLayout>

</LinearLayout>