<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/hui">

    <LinearLayout
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6798e7"
        android:padding="5dp"
        >
        <RelativeLayout
            android:layout_weight="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/fan"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_back_white"
                android:layout_width="15dp"
                android:layout_height="14dp" />
            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/fan"
                android:gravity="left"
                android:id="@+id/tv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="返回"
                android:textColor="@color/white"
                android:textSize="16sp"
                />

        </RelativeLayout>

        <TextView
            android:layout_weight="5"
            android:gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退还详情"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
          android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_margin="8dp"
            android:id="@+id/alterdetail_tupian"
            android:layout_width="115dp"
            android:layout_height="90dp"
            android:src="@drawable/binggui"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alterdetail_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="14sp"
                android:layout_marginRight="10dip"
                android:textColor="@color/textblack"
                android:text="阿拉阿发发发 阿达阿达sdaaadadadada啊大大啊大大啊啊啊阿达"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redd"
                    android:textSize="14dp"
                    android:padding="6dp"
                    android:text="¥"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/redd"
                    android:textSize="16dp"
                    android:text="1389.00"
                    android:layout_weight="1"
                    android:id="@+id/alterdetail_price" />

               <TextView
                   android:id="@+id/alterdetail_zhuantai"
                   android:layout_margin="10dp"
                   android:text="待取回"
                   android:textSize="16sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
         android:background="@color/white"
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="退还人:"
                 android:textSize="16sp"
                 android:padding="10dp"
                 android:layout_marginTop="10dp"
                 android:layout_marginLeft="10dp"/>

             <TextView
             android:layout_weight="1"
             android:id="@+id/alter_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="张三"
             android:textSize="16sp"
             android:padding="10dp"
             android:layout_marginTop="10dp"/>
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="手机号码:"
                 android:textSize="16sp"
                 android:padding="10dp"
                 android:layout_marginLeft="10dp"/>

             <TextView
                 android:layout_weight="1"
                 android:id="@+id/alter_phone"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="1375684952"
                 android:textSize="16sp"
                 android:padding="10dp"
               />
         </LinearLayout>
         <LinearLayout
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:orientation="horizontal">

             <TextView
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="地址:"
                 android:textSize="16sp"
                 android:padding="10dp"
                 android:layout_marginLeft="10dp"/>

             <TextView
                 android:layout_weight="1"
                 android:id="@+id/alter_address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="北京海淀苏州街"
                 android:textSize="16sp"
                 android:padding="10dp"
                 />
         </LinearLayout>
     </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退换订单ID:"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/alter_dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20175256"
                android:textSize="16sp"
                android:padding="10dp"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单ID:"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/dingdan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1375684952"
                android:textSize="16sp"
                android:padding="10dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退换提交时间:"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/alter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-01 09：30"
                android:textSize="16sp"
                android:padding="10dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退换完成时间:"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_weight="1"
                android:id="@+id/alter_timeok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-01-08 09：30"
                android:textSize="16sp"
                android:padding="10dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
