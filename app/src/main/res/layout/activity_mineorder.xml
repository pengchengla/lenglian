<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/collect_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6798e7"
        android:padding="10dp">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/fanhui_2x"
            android:drawablePadding="6dp"
            android:padding="10dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="18sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的订单"
            android:padding="10dp"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
   <RelativeLayout

       android:id="@+id/real_login"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:id="@+id/viewImage"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="100dp"
           android:layout_width="140dp"
           android:layout_height="120dp"
           android:src="@drawable/viewstub"/>
       <TextView
           android:id="@+id/view_login"
           android:textColor="@color/textblack"
           android:textSize="16sp"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/viewImage"
           android:text="登陆后查看订单"
           android:layout_marginTop="20dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <LinearLayout
           android:layout_centerHorizontal="true"
           android:layout_below="@id/view_login"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content">
       <Button
           android:gravity="center"
           android:layout_marginTop="15dp"
           android:id="@+id/view_btn"
           android:layout_width="180dp"
           android:layout_height="50dp"
           android:background="@drawable/bg_blue"
           android:text="立即登录"
           android:padding="10dp"
           android:textColor="@color/white"
           android:textSize="18sp"/>
       </LinearLayout>
   </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/liner_tab"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/tab"
        app:tabMode="fixed"
        android:paddingTop="5dp"
        app:tabIndicatorColor="@color/blue"
        />
    <View
        android:background="@color/hui"
        android:layout_width="wrap_content"
        android:layout_height="10dp"/>
    <FrameLayout
        android:background="@color/white"
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>