<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#6798e7">
        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/icon_back_white"
            android:drawablePadding="6dp"
            android:padding="8dp"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aboutwe"
            android:padding="10dp"

            android:background="@null"
            android:textColor="@color/white"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"/>



    </RelativeLayout>
      <LinearLayout
          android:layout_margin="10dp"
          android:background="@drawable/shape_radu"
          android:layout_width="match_parent"
          android:layout_height="match_parent">
          <EditText
              android:background="@null"
              android:layout_margin="10dp"
              android:id="@+id/set_edwe"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="关于我们的内容"
              android:textSize="14sp"
              android:padding="20dp"></EditText>


      </LinearLayout>
</LinearLayout>
